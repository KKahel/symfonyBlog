{# src/Sdz/BlogBundle/Resources/views/Blog/formulaire.html.twig #}
{# Le formulaire reste inchangé #}
<div class="well">
    {{ form_start(form, {'method': 'post'}) }}
    {# Les erreurs générales du formulaire. #}
    {{ form_errors(form) }}
    <div class="form-group">
        {# Titre #}
        {{ form_label(form.titre, "Titre de l'article :") }}
        {{ form_errors(form.titre) }}
        {{ form_widget(form.titre, {'attr' : {'class':'form-control'} }) }}
    </div>
    {% if form.date is defined %}
        <div class="form-group">
            {# Date #}
            {{ form_label(form.date, "Date :") }}
            {{ form_errors(form.date) }}
            {{ form_widget(form.date, {'attr' : {'class':'form-control'} }) }}
        </div>
    {% endif %}
    <div class="form-group">
        {# Contenu #}
        {{ form_label(form.contenu, "Contenu") }}
        {{ form_errors(form.contenu) }}
        {{ form_widget(form.contenu, {'attr' : {'class':'form-control'} }) }}
    </div>
    <div class="form-group">
        {# Auteur #}
        {{ form_label(form.auteur, "Auteur") }}
        {{ form_errors(form.auteur) }}
        {{ form_widget(form.auteur, {'attr' : {'class':'form-control'} }) }}
    </div>
    {% if form.publication is defined %}
        <div class="checkbox">
            {# Publication #}
            {#{{ form_label(form.publication,"Publication") }}#}
            <label>{{ form_widget(form.publication) }} Publication</label>
        </div>
    {% endif %}
    {# Image #}
    <hr/>
    <label class="required">Image</label>
    <div class="form-group">
        {{ form_label(form.image.file, "File") }}
        {{ form_widget(form.image.file) }}
    </div>
    {#<div class="form-group">#}
    {#{{ form_label(form.image.url, "Url") }}#}
    {#{{ form_widget(form.image.url, {'attr' : {'class':'form-control'} }) }}#}
    {#</div>#}
    {#<div class="form-group">#}
    {#{{ form_label(form.image.alt, "Alt") }}#}
    {#{{ form_widget(form.image.alt, {'attr' : {'class':'form-control'} }) }}#}
    {#</div>#}
    <hr/>
    <label class="required">Catégories</label>
    <div class="form-group">
        {#{{ form_label(form.categories, "Categories") }}#}
        {{ form_widget(form.categories, {'attr' : {'class':'form-control'} }) }}
    </div>
    {{ form_rest(form) }}
    <input type="submit" class="btn btn-primary" />
    {{ form_end(form) }}
</div>
